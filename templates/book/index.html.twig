{% extends 'base.html.twig' %}
{% block title %}Liste des livres{% endblock %}
{% block body %}
<h1>Liste des livres</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Titre</th>
      <th>ISBN</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for book in books %}
    <tr>
      <td>{{ book.id }}</td>
      <td>{{ book.title }}</td>
      <td>{{ book.isbn }}</td>
      <td>
        <a href="{{ path('app_book_show', {'id': book.id}) }}">Voir</a>
        <a href="{{ path('app_book_edit', {'id': book.id}) }}">Modifier</a>
      </td>
    </tr>
  {% else %}
    <tr>
      <td colspan="4">Aucun livre trouvé.</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

<a href="{{ path('app_book_new') }}">Créer un nouveau livre</a>
{% endblock %}
