{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block body %}
<div style="max-width:420px;margin:40px auto;padding:20px;border:1px solid #ddd;border-radius:6px;">
  <h2>Connexion</h2>

  {% if error %}
    <div style="color:red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form action="{{ path('app_login') }}" method="post">
    <label for="username">Email :</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required><br><br>

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="_password" required><br><br>

    {# ğŸ” CSRF token obligatoire #}
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button type="submit">Se connecter</button>
    <a href="{{ path('app_register') }}">S'inscrire</a>
  </form>
</div>
{% endblock %}
